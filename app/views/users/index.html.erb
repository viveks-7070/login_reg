<div class="container">
<h5>Sign Up</h5>

<form action="/users" method="POST">
  <div class="row">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <div class="col-2"><input type="text" name="user[name]" placeholder="name"></div>
    <div class="col-2"><input type="email" name="user[email]" placeholder="email" ></div>
    <div class="col-2"><input type="password" name="user[password]" placeholder="password"></div>
    <div class="col-2"><input type="password" name="user[password_confirmation]" placeholder="password_confirmation"></div>
    <div class="col-4"><input type="submit" name="submit" class="btn btn-primary"></div>
  </div>
</form>

<br><br>

<h5>
  Login
</h5><br>

<form action="/sessions" method="POST">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="email" name="login[email]" placeholder="email" required="true">
  <input type="text" name="login[password]" placeholder="password" required="true">
  <input type="submit" name="submit" class="btn btn-primary">
</form>

</div>